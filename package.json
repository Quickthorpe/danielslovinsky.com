{
  "name": "danielslovinsky.com",
  "description": "Daniel Slovinsky's personal site",
  "license": "MIT",
  "version": "2.0.0",
  "author": {
    "name": "Daniel Slovinsky",
    "url": "https://danielslovinsky.com/"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "serve": "next start -p 5000",
    "prod": "NODE_ENV=production next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mdx --fix",
    "format": "prettier --write  --loglevel silent \"src/**/*.{js,jsx,ts,tsx,mdx}\"",
    "check-types": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.5",
    "next": "^13.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.10",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.3.2",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "eslint --fix",
      "prettier --write --loglevel silent"
    ]
  }
}
